DepictionOperator_SkeletalAnimation_MG_42_HON is [Template_DepictionOperator_SkeletalAnimation_With_Tree_TEST(AnimationTree = HMG_MG34_GR_Anim_Tree)]

Gfx_MG_42_HON_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = Modele_MG_42_HON ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = Modele_MG_42_HON_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = Modele_MG_42_HON_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = Modele_MG_42_HON ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = Modele_MG_42_HON_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = Modele_MG_42_HON_LOW ),
        ]

        SubDepictions = []
        Operators = DepictionOperator_SkeletalAnimation_MG_42_HON +     [TCosmeticTurretOperatorDesc
            (
                OperatorId = 'tourelle1'
                ZAxisNode  = 'Tourelle_01'
                ZAxisPhysicalPropertyName = 'tourelle1'
                ZAxisAbsolutePhysicalPropertyName = 'tourelle1absolute'
                ZAxisHasTargetPhysicalPropertyName = 'tourelle1target'
                GameplayAssumePitchYawControlPhysicalPropertyName = 'tourelle1control'
                YAxisNode = 'Axe_Canon_01'
                YAxisPhysicalPropertyName = 'tourelle1axe'
                MinYAngle = -0.174532925199
                MaxYAngle = 0.436332312999
            ),]
        Actions = Weapons_MG_42_HON
    )

SubDepiction_Servant_1_MG_42_HON is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_MG_42_HON_1 )
SubDepiction_Servant_2_MG_42_HON is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_MG_42_HON_2 )
SubDepiction_Canon_AT_MG_42_HON is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_MG_42_HON_Weapon )

Gfx_MG_42_HON is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_MG_42_HON( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_MG_42_HON( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_MG_42_HON( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_MG_42_HON( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_MG_42_HON( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_MG_42_HON( ModelFile = ModelFile_Boites_HMG_MG42) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_MG_42_HON,
                        SubDepiction_Servant_2_MG_42_HON,
                        SubDepiction_Canon_AT_MG_42_HON]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
