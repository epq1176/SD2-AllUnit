SubDepiction_Canon_AT_PaK_36 is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_PaK_36_Weapon )

Gfx_PaK_36 is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_PaK_36( ModelFile = ModelFile_Boites_PaK_36) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_PaK_36( ModelFile = ModelFile_Boites_PaK_36) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_PaK_36( ModelFile = ModelFile_Boites_PaK_36) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_PaK_36( ModelFile = ModelFile_Boites_PaK_36) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_PaK_36( ModelFile = ModelFile_Boites_PaK_36) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_PaK_36( ModelFile = ModelFile_Boites_PaK_36) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_PaK_36,
                        SubDepiction_Servant_2_PaK_36,
                        SubDepiction_Canon_AT_PaK_36]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
