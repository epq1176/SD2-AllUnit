            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_RCL_LG_40_75mm( ModelFile = ModelFile_Boites_LG40) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_RCL_LG_40_75mm( ModelFile = ModelFile_Boites_LG40) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
