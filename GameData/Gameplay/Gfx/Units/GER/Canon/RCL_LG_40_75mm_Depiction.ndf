    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_RCL_LG_40_75mm ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_RCL_LG_40_75mm_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_RCL_LG_40_75mm_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_RCL_LG_40_75mm ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_RCL_LG_40_75mm_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_RCL_LG_40_75mm_LOW ),
        ]

        SubDepictions = []
        Operators = //DepictionOperator_SkeletalAnimation_Canon_ZIS2_57mmAT_SOV +
