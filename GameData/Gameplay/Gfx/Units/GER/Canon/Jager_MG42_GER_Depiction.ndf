DepictionOperator_SkeletalAnimation_Jager_MG42_GER is [Template_DepictionOperator_SkeletalAnimation_With_Tree_TEST(AnimationTree = HMG_MG42_Anim_Tree)]

Gfx_Jager_MG42_GER_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Jager_MG42_GER ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Jager_MG42_GER_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Jager_MG42_GER_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_Jager_MG42_GER ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_Jager_MG42_GER_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_Jager_MG42_GER_LOW ),
        ]

        SubDepictions = []
        Operators = DepictionOperator_SkeletalAnimation_Jager_MG42_GER +     [TCosmeticTurretOperatorDesc
            (
                OperatorId = 'tourelle1'
                ZAxisNode  = 'Tourelle_01'
                ZAxisPhysicalPropertyName = 'tourelle1'
                ZAxisAbsolutePhysicalPropertyName = 'tourelle1absolute'
                ZAxisHasTargetPhysicalPropertyName = 'tourelle1target'
                GameplayAssumePitchYawControlPhysicalPropertyName = 'tourelle1control'
                YAxisNode = 'Axe_Canon_01'
                YAxisPhysicalPropertyName = 'tourelle1axe'
                MinYAngle = -0.174532925199
                MaxYAngle = 0.436332312999
            ),]
        Actions = Weapons_Jager_MG42_GER
    )

SubDepiction_Servant_1_Jager_MG42_GER is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_Jager_MG42_GER_1 )
SubDepiction_Servant_2_Jager_MG42_GER is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_Jager_MG42_GER_2 )
SubDepiction_Canon_AT_Jager_MG42_GER is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_Jager_MG42_GER_Weapon )

Gfx_Jager_MG42_GER is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_Jager_MG42_GER( ModelFile = ModelFile_Boites_Jager_MG42_GER) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_Jager_MG42_GER( ModelFile = ModelFile_Boites_Jager_MG42_GER) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_Jager_MG42_GER( ModelFile = ModelFile_Boites_Jager_MG42_GER) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_Jager_MG42_GER( ModelFile = ModelFile_Boites_Jager_MG42_GER) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_Jager_MG42_GER( ModelFile = ModelFile_Boites_Jager_MG42_GER) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_Jager_MG42_GER( ModelFile = ModelFile_Boites_Jager_MG42_GER) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_Jager_MG42_GER,
                        SubDepiction_Servant_2_Jager_MG42_GER,
                        SubDepiction_Canon_AT_Jager_MG42_GER]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
