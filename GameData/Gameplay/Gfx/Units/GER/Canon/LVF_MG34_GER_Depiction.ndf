template TemplateMeshDescriptor_LVF_MG34_GER [ ModelFile ] is TResourceMultiMaterialMeshWithLod
(
    FileName = <ModelFile>
    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)

Gfx_LVF_MG34_GER_1 is TDepictionTemplate //servant gauche
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Gren_GER)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Gren_GER_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Gren_GER)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Gren_GER_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMG_Gauche
    // Actions = Weapons_Mortar
)

Gfx_LVF_MG34_GER_2 is TDepictionTemplate //servant droite
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Chasseurs_GER)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Chasseurs_GER_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Chasseurs_GER)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_LVF_Chasseurs_GER_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMG_Droite
    // Actions = Weapons_Mortar
)

//Arme


DepictionOperator_SkeletalAnimation_LVF_MG34_GER is [Template_DepictionOperator_SkeletalAnimation_With_Tree_TEST(AnimationTree = HMG_MG34_GR_Anim_Tree)]

Gfx_LVF_MG34_GER_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_LVF_MG34_GER ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_LVF_MG34_GER_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_LVF_MG34_GER_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_LVF_MG34_GER ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_LVF_MG34_GER_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_LVF_MG34_GER_LOW ),
        ]

        SubDepictions = []
        Operators = DepictionOperator_SkeletalAnimation_LVF_MG34_GER +     [TCosmeticTurretOperatorDesc
            (
                OperatorId = 'tourelle1'
                ZAxisNode  = 'Tourelle_01'
                ZAxisPhysicalPropertyName = 'tourelle1'
                ZAxisAbsolutePhysicalPropertyName = 'tourelle1absolute'
                ZAxisHasTargetPhysicalPropertyName = 'tourelle1target'
                GameplayAssumePitchYawControlPhysicalPropertyName = 'tourelle1control'
                YAxisNode = 'Axe_Canon_01'
                YAxisPhysicalPropertyName = 'tourelle1axe'
                MinYAngle = -0.174532925199
                MaxYAngle = 0.436332312999
            ),]
        Actions = Weapons_LVF_MG34_GER
    )

SubDepiction_Servant_1_LVF_MG34_GER is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_LVF_MG34_GER_1 )
SubDepiction_Servant_2_LVF_MG34_GER is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_LVF_MG34_GER_2 )
SubDepiction_Canon_AT_LVF_MG34_GER is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_LVF_MG34_GER_Weapon )

Gfx_LVF_MG34_GER is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_Boites_HMG_MG42) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_LVF_MG34_GER( ModelFile = ModelFile_Boites_HMG_MG42) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_LVF_MG34_GER,
                        SubDepiction_Servant_2_LVF_MG34_GER,
                        SubDepiction_Canon_AT_LVF_MG34_GER]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
