template TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER [ ModelFile ] is TResourceMultiMaterialMeshWithLod
(
    FileName = <ModelFile>
    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)



Gfx_SkiMortier_80mm_Jager_GER_1 is TDepictionTemplate //servant gauche
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMortar_Gauche
)

Gfx_SkiMortier_80mm_Jager_GER_2 is TDepictionTemplate //servant droite
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER_2)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER_2_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER_2)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Jager_GER_2_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMortar_Droite
)


// DepictionOperator_SkeletalAnimation_SkiMortier_80mm_Jager_GER is [Template_DepictionOperator_SkeletalAnimation_With_Tree_TEST(AnimationTree = Mortier_GrW_80mm_Anim_Tree)]

Gfx_SkiMortier_80mm_Jager_GER_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_SkiMortier_80mm_Jager_GER ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_SkiMortier_80mm_Jager_GER_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_SkiMortier_80mm_Jager_GER_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_SkiMortier_80mm_Jager_GER ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_SkiMortier_80mm_Jager_GER_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_SkiMortier_80mm_Jager_GER_LOW ),
        ]

        SubDepictions = []
        Operators = //DepictionOperator_SkeletalAnimation_SkiMortier_80mm_Jager_GER
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_Mortar
        Actions = Weapons_SkiMortier_80mm_Jager_GER
    )

SubDepiction_Servant_1_SkiMortier_80mm_Jager_GER is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_SkiMortier_80mm_Jager_GER_1 )
SubDepiction_Servant_2_SkiMortier_80mm_Jager_GER is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_SkiMortier_80mm_Jager_GER_2 )
SubDepiction_Canon_AT_SkiMortier_80mm_Jager_GER is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_SkiMortier_80mm_Jager_GER_Weapon )

Gfx_SkiMortier_80mm_Jager_GER is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_SkiMortier_80mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_SkiMortier_80mm_Jager_GER,
                        SubDepiction_Servant_2_SkiMortier_80mm_Jager_GER,
                        SubDepiction_Canon_AT_SkiMortier_80mm_Jager_GER]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
