Gfx_Mortier_120mm_Jager_GER_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Mortier_120mm_Jager_GER ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Mortier_120mm_Jager_GER_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Mortier_120mm_Jager_GER_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_Mortier_120mm_Jager_GER ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_Mortier_120mm_Jager_GER_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_Mortier_120mm_Jager_GER_LOW ),
        ]

        SubDepictions = []
        Operators = // DepictionOperator_SkeletalAnimation_Mortier_120mm_Jager_GER
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_Mortar
        Actions = Weapons_Mortier_120mm_Jager_GER
    )

SubDepiction_Servant_1_Mortier_120mm_Jager_GER is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_Mortier_120mm_Jager_GER_1 )
SubDepiction_Servant_2_Mortier_120mm_Jager_GER is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_Mortier_120mm_Jager_GER_2 )
SubDepiction_Canon_AT_Mortier_120mm_Jager_GER is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_Mortier_120mm_Jager_GER_Weapon )

Gfx_Mortier_120mm_Jager_GER is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_Mortier_120mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_Mortier_120mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_Mortier_120mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_Mortier_120mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_Mortier_120mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_Mortier_120mm_Jager_GER( ModelFile = ModelFile_Boites_GrW_34) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_Mortier_120mm_Jager_GER,
                        SubDepiction_Servant_2_Mortier_120mm_Jager_GER,
                        SubDepiction_Canon_AT_Mortier_120mm_Jager_GER]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
