template TemplateMeshDescriptor_FFI_Mort_2in_FR [ ModelFile ] is TResourceMultiMaterialMeshWithLod
(
    FileName = <ModelFile>
    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)

// ModelFile_Boites_Mortier_2inch_UK is 'GameData:Assets\3D\Units\UK\Canon\6_pdr\Boites_6_pdr.Ase2NdfBin'

Gfx_FFI_Mort_2in_FR_1 is TDepictionTemplate //servant gauche
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMortar_Gauche
)

Gfx_FFI_Mort_2in_FR_2 is TDepictionTemplate //servant droite
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR_Secondary)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR_Secondary_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR_Secondary)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Servant_MG_FR_Secondary_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMortar_Droite
)

Gfx_FFI_Mort_2in_FR_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Mortier_2inch_UK ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Mortier_2inch_UK_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Mortier_2inch_UK_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_Mortier_2inch_UK ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_Mortier_2inch_UK_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_Mortier_2inch_UK_LOW ),
        ]

        SubDepictions = []
        Operators =
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_Mortar
        Actions = Weapons_FFI_Mort_2in_FR
    )

SubDepiction_Servant_1_FFI_Mort_2in_FR is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_FFI_Mort_2in_FR_1 )
SubDepiction_Servant_2_FFI_Mort_2in_FR is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_FFI_Mort_2in_FR_2 )
SubDepiction_Canon_AT_FFI_Mort_2in_FR is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_FFI_Mort_2in_FR_Weapon )

Gfx_FFI_Mort_2in_FR is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Boites_Mortier_2inch_UK) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Boites_Mortier_2inch_UK) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Boites_Mortier_2inch_UK) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Boites_Mortier_2inch_UK) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Boites_Mortier_2inch_UK) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_FFI_Mort_2in_FR( ModelFile = ModelFile_Boites_Mortier_2inch_UK) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_FFI_Mort_2in_FR,
                        SubDepiction_Servant_2_FFI_Mort_2in_FR,
                        SubDepiction_Canon_AT_FFI_Mort_2in_FR]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
