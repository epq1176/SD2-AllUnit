    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = Modele_HMG_Vickers_SA ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = Modele_HMG_Vickers_SA_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = Modele_HMG_Vickers_SA_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = Modele_HMG_Vickers_SA ),
