Gfx_HMG_Vickers_SA is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_SA( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_SA( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_SA( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_SA( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_SA( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_SA( ModelFile = ModelFile_Boites_Vickers_Gun) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_HMG_Vickers_SA,
                        SubDepiction_Servant_2_HMG_Vickers_SA,
                        SubDepiction_Canon_AT_HMG_Vickers_SA]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
