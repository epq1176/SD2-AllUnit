Gfx_PaK_40_75mm_UK_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_PaK_40_75mm ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_PaK_40_75mm_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_PaK_40_75mm_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_PaK_40_75mm ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_PaK_40_75mm_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_PaK_40_75mm_LOW ),
        ]

        SubDepictions = []
        Operators = //DepictionOperator_SkeletalAnimation_Canon_ZIS2_57mmAT_SOV +
            DepictionOperatorNode_ResetUnit +
            DepictionOperatorNode_Propulsion_2Wheels_Canon +
            DepictionOperator_Carriable_Canon +
            DepictionOperator_TurretAim_Canon +
            DepictionOperator_TurretRecoil_Canon
        Actions = Weapons_PaK_40_75mm_UK
    )

