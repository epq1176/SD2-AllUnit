template TemplateMeshDescriptor_Mortier_2inch_ITA [ ModelFile ] is TResourceMultiMaterialMeshWithLod
(
    FileName = <ModelFile>
    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)

export ModelFile_Boites_Mortier_2inch_ITA is 'GameData:Assets\3D\Units\UK\Canon\2_Inch_Mortar\Boites_2_Inch_Mortar.Ase2NdfBin'

Gfx_Mortier_2inch_ITA_1 is TDepictionTemplate //servant gauche
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMortar_Gauche
)

Gfx_Mortier_2inch_ITA_2 is TDepictionTemplate //servant droite
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA_Secondary)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA_Secondary)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA_Secondary)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Fucilieri_ITA_Secondary)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMortar_Droite
)

Gfx_Mortier_2inch_ITA_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Mortier_2inch_ITA ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Mortier_2inch_ITA_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Mortier_2inch_ITA_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_Mortier_2inch_ITA ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_Mortier_2inch_ITA_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_Mortier_2inch_ITA_LOW ),
        ]

        SubDepictions = []
        Operators =
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_Mortar
        Actions = Weapons_Mortier_2inch_ITA
    )

SubDepiction_Servant_1_Mortier_2inch_ITA is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_Mortier_2inch_ITA_1 )
SubDepiction_Servant_2_Mortier_2inch_ITA is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_Mortier_2inch_ITA_2 )
SubDepiction_Canon_AT_Mortier_2inch_ITA is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_Mortier_2inch_ITA_Weapon )

Gfx_Mortier_2inch_ITA is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Boites_Mortier_2inch_ITA) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Boites_Mortier_2inch_ITA) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Boites_Mortier_2inch_ITA) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Boites_Mortier_2inch_ITA) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Boites_Mortier_2inch_ITA) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_Mortier_2inch_ITA( ModelFile = ModelFile_Boites_Mortier_2inch_ITA) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_Mortier_2inch_ITA,
                        SubDepiction_Servant_2_Mortier_2inch_ITA,
                        SubDepiction_Canon_AT_Mortier_2inch_ITA]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
