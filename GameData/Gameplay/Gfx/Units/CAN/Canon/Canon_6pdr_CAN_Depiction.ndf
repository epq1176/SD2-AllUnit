template TemplateMeshDescriptor_Canon_6pdr_CAN [ ModelFile ] is TResourceMultiMaterialMeshWithLod
(
    FileName = <ModelFile>
    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)

// ModelFile_Boites_6_pdr is 'GameData:Assets\3D\Units\UK\Canon\6_pdr\Boites_6_pdr.Ase2NdfBin'

Gfx_Canon_6pdr_CAN_1 is TDepictionTemplate //servant gauche
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_Servant_Gauche
)

Gfx_Canon_6pdr_CAN_2 is TDepictionTemplate //servant droite
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN_Secondary)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN_Secondary_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN_Secondary)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Servant_AT_CAN_Secondary_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_Servant_Droite
)

Gfx_Canon_6pdr_CAN_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = Modele_Canon_6pdr_UK ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = Modele_Canon_6pdr_UK_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = Modele_Canon_6pdr_UK_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = Modele_Canon_6pdr_UK ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = Modele_Canon_6pdr_UK_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = Modele_Canon_6pdr_UK_LOW ),
        ]

        SubDepictions = []
        Operators = //DepictionOperator_SkeletalAnimation_Canon_ZIS2_57mmAT_SOV +
            DepictionOperatorNode_ResetUnit +
            DepictionOperatorNode_Propulsion_2Wheels_Canon +
            DepictionOperator_Carriable_Canon +
            DepictionOperator_TurretAim_Canon +
            DepictionOperator_TurretRecoil_Canon
        Actions = Weapons_Canon_6pdr_CAN
    )

SubDepiction_Servant_1_Canon_6pdr_CAN is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_Canon_6pdr_CAN_1 )
SubDepiction_Servant_2_Canon_6pdr_CAN is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_Canon_6pdr_CAN_2 )
SubDepiction_Canon_AT_Canon_6pdr_CAN is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_Canon_6pdr_CAN_Weapon )

Gfx_Canon_6pdr_CAN is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Boites_6_pdr) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Boites_6_pdr) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Boites_6_pdr) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Boites_6_pdr) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Boites_6_pdr) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_Canon_6pdr_US( ModelFile = ModelFile_Boites_6_pdr) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_Canon_6pdr_CAN,
                        SubDepiction_Servant_2_Canon_6pdr_CAN,
                        SubDepiction_Canon_AT_Canon_6pdr_CAN]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
