template TemplateMeshDescriptor_HMG_Vickers_CAN [ ModelFile ] is TResourceMultiMaterialMeshWithLod
(
    FileName = <ModelFile>
    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)

Gfx_HMG_Vickers_CAN_1 is TDepictionTemplate //servant gauche
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMG_Gauche
    // Actions = Weapons_Mortar
)

Gfx_HMG_Vickers_CAN_2 is TDepictionTemplate //servant droite
(
    RenderStyleProviderDescriptor = ~/DefaultInfantryRenderStyleProvider
    Selector = SpecificServantDepictionSelector
    DepictionAlternatives = [
        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN_Secondary)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN_Secondary_LOW)  ),
        DepictionDescriptor_LOD_Low_Empty       ( ),
        DepictionDescriptor_LOD_WreckedHigh     (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN_Secondary)  ),
        DepictionDescriptor_LOD_WreckedMid      (  MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Servant_AT_CAN_Secondary_LOW)  ),
        DepictionDescriptor_LOD_WreckedLow_Empty( ),
    ]

    SubDepictions = []
    Operators = DepictionOperator_Animation_ServantMG_Droite
    // Actions = Weapons_Mortar
)

Gfx_HMG_Vickers_CAN_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = Modele_HMG_Vickers_UK ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = Modele_HMG_Vickers_UK_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = Modele_HMG_Vickers_UK_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = Modele_HMG_Vickers_UK ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = Modele_HMG_Vickers_UK_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = Modele_HMG_Vickers_UK_LOW ),
        ]

        SubDepictions = []
        Operators = //DepictionOperator_SkeletalAnimation_MMG_M1919_Rangers_US +
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_MMG +
            DepictionOperator_TurretAim_MMG +
            DepictionOperator_TurretRecoil_MMG
        Actions = Weapons_HMG_Vickers_CAN
    )

SubDepiction_Servant_1_HMG_Vickers_CAN is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_HMG_Vickers_CAN_1 )
SubDepiction_Servant_2_HMG_Vickers_CAN is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_HMG_Vickers_CAN_2 )
SubDepiction_Canon_AT_HMG_Vickers_CAN is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_HMG_Vickers_CAN_Weapon )

Gfx_HMG_Vickers_CAN is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Boites_Vickers_Gun) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_HMG_Vickers_CAN( ModelFile = ModelFile_Boites_Vickers_Gun) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Canon_AT_HMG_Vickers_CAN,
                        SubDepiction_Servant_1_HMG_Vickers_CAN,
                        SubDepiction_Servant_2_HMG_Vickers_CAN]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
