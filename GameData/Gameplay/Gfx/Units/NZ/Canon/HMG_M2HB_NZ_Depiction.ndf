    CivMask = CivMask/Nationalite1
    TypeMask = TypeMask/Infanterie
)

export ModelFile_Boites_HMG_M2HB_NZ is 'GameData:Assets\3D\Units\USA\Canon\Browning_M2HB\Boites_Browning_M2HB.Ase2NdfBin'

