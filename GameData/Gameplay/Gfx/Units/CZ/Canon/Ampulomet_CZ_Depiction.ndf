Gfx_Ampulomet_CZ_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Ampulomet_CZ ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Ampulomet_CZ_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Ampulomet_CZ_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_Ampulomet_CZ ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_Ampulomet_CZ_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_Ampulomet_CZ_LOW ),
        ]

        SubDepictions = []
        Operators =
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_Mortar
        Actions = Weapons_Ampulomet_CZ
    )

SubDepiction_Servant_1_Ampulomet_CZ is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_Ampulomet_CZ_1 )
SubDepiction_Servant_2_Ampulomet_CZ is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_Ampulomet_CZ_2 )
SubDepiction_Canon_AT_Ampulomet_CZ is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_Ampulomet_CZ_Weapon )

Gfx_Ampulomet_CZ is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_Ampulomet_CZ( ModelFile = ModelFile_Boites_Ampulomet_CZ) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_Ampulomet_CZ( ModelFile = ModelFile_Boites_Ampulomet_CZ) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_Ampulomet_CZ( ModelFile = ModelFile_Boites_Ampulomet_CZ) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_Ampulomet_CZ( ModelFile = ModelFile_Boites_Ampulomet_CZ) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_Ampulomet_CZ( ModelFile = ModelFile_Boites_Ampulomet_CZ) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_Ampulomet_CZ( ModelFile = ModelFile_Boites_Ampulomet_CZ) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_Ampulomet_CZ,
                        SubDepiction_Servant_2_Ampulomet_CZ,
                        SubDepiction_Canon_AT_Ampulomet_CZ]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
