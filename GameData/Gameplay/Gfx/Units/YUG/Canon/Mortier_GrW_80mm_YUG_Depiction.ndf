Gfx_Mortier_GrW_80mm_YUG_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Mortier_GrW_80mm_YUG ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Mortier_GrW_80mm_YUG_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Mortier_GrW_80mm_YUG_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_Mortier_GrW_80mm_YUG ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_Mortier_GrW_80mm_YUG_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_Mortier_GrW_80mm_YUG_LOW ),
        ]

        SubDepictions = []
        Operators = //DepictionOperator_SkeletalAnimation_Mortier_GrW_80mm_YUG
            DepictionOperatorNode_ResetUnit +
            DepictionOperator_Carriable_Mortar
        Actions = Weapons_Mortier_GrW_80mm_YUG
    )

SubDepiction_Servant_1_Mortier_GrW_80mm_YUG is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_Mortier_GrW_80mm_YUG_1 )
SubDepiction_Servant_2_Mortier_GrW_80mm_YUG is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_Mortier_GrW_80mm_YUG_2 )
SubDepiction_Canon_AT_Mortier_GrW_80mm_YUG is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_Mortier_GrW_80mm_YUG_Weapon )

Gfx_Mortier_GrW_80mm_YUG is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_Mortier_GrW_80mm_YUG( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_Mortier_GrW_80mm_YUG( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_Mortier_GrW_80mm_YUG( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_Mortier_GrW_80mm_YUG( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_Mortier_GrW_80mm_YUG( ModelFile = ModelFile_Boites_GrW_34) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_Mortier_GrW_80mm_YUG( ModelFile = ModelFile_Boites_GrW_34) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
