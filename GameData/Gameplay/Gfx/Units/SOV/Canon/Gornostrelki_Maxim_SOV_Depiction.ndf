            DepictionDescriptor_LOD_High       ( MeshDescriptor = Modele_Gornostrelki_Maxim_SOV ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = Modele_Gornostrelki_Maxim_SOV_MID ),
