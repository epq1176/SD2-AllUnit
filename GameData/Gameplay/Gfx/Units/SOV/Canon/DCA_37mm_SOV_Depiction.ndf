DepictionOperator_SkeletalAnimation_DCA_37mm_SOV is [Template_DepictionOperator_SkeletalAnimation_With_Tree_TEST(AnimationTree = DCA_37mm_GER_Anim_Tree)]

Gfx_DCA_37mm_SOV_Weapon is TDepictionTemplate //arme
    (
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = CommonDepictionSelector
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_DCA_37mm_SOV ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_DCA_37mm_SOV_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_DCA_37mm_SOV_LOW ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor =  Modele_DCA_37mm_SOV ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor =  Modele_DCA_37mm_SOV_MID ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor =  Modele_DCA_37mm_SOV_LOW ),
        ]

        SubDepictions = []

        Operators = Operators_DCA_37mm_GER
                  + DepictionOperator_SkeletalAnimation_DCA_37mm_SOV //à activer après avoir mis la colonne "Animated" à "oui" dans l'ods. Bien mettre cette ligne en deuxieme position pour continuer a avoir les anims procedurales en meme temps !
                  // + DepictionOperator_Chassis_MediumTank
                  // + DepictionOperator_Propulsion_ContinuousTrack_MediumTank
                  // + DepictionOperator_Propulsion_2Wheels_Generic
                  + [DepictionOperator_TurretRecoil_AutoCanon( TurretNum = '1' )]

        Actions = Weapons_DCA_37mm_SOV
                + DepictionAction_StressLevel_2
                + DepictionAction_MovementFX_Wheeled
    )

SubDepiction_Servant_1_DCA_37mm_SOV is TSubDepiction( Anchor = 'servant_G' Depiction = Gfx_DCA_37mm_SOV_1 )
SubDepiction_Servant_2_DCA_37mm_SOV is TSubDepiction( Anchor = 'servant_D' Depiction = Gfx_DCA_37mm_SOV_2 )
SubDepiction_Canon_AT_DCA_37mm_SOV is TSubDepiction( Anchor = 'Canon_AT' Depiction = Gfx_DCA_37mm_SOV_Weapon )

Gfx_DCA_37mm_SOV is TTimelyReceiverFactoryCarrier
(
    DepictionTemplate = TDepictionTemplate //les boites
    (
        OverrideMeshBoundingBoxMin = [-500,-500,0]
        OverrideMeshBoundingBoxMax = [ 500, 500,200]
        RenderStyleProviderDescriptor = ~/DefaultRenderStyleProvider
        Selector = SpecificDepictionSelectorWithScale
        DepictionAlternatives = [
            DepictionDescriptor_LOD_High       ( MeshDescriptor = TemplateMeshDescriptor_DCA_37mm_SOV( ModelFile = ModelFile_Boites_DCA_37mm_SOV) ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor = TemplateMeshDescriptor_DCA_37mm_SOV( ModelFile = ModelFile_Boites_DCA_37mm_SOV) ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor = TemplateMeshDescriptor_DCA_37mm_SOV( ModelFile = ModelFile_Boites_DCA_37mm_SOV) ),
            DepictionDescriptor_LOD_WreckedHigh( MeshDescriptor = TemplateMeshDescriptor_DCA_37mm_SOV( ModelFile = ModelFile_Boites_DCA_37mm_SOV) ),
            DepictionDescriptor_LOD_WreckedMid ( MeshDescriptor = TemplateMeshDescriptor_DCA_37mm_SOV( ModelFile = ModelFile_Boites_DCA_37mm_SOV) ),
            DepictionDescriptor_LOD_WreckedLow ( MeshDescriptor = TemplateMeshDescriptor_DCA_37mm_SOV( ModelFile = ModelFile_Boites_DCA_37mm_SOV) ),
        ]
        NodeNamesForSelection = [ 'Canon_AT', 'servant_G' , 'servant_D']
        SubDepictions = [SubDepiction_Servant_1_DCA_37mm_SOV,
                        SubDepiction_Servant_2_DCA_37mm_SOV,
                        SubDepiction_Canon_AT_DCA_37mm_SOV]

        Operators = [DepictionOperatorNode_Reset_Generic]
    )
)
