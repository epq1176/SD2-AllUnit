            DepictionDescriptor_LOD_High       ( MeshDescriptor =  Modele_Mortier_107mm_US ),
            DepictionDescriptor_LOD_Mid        ( MeshDescriptor =  Modele_Mortier_107mm_US_MID ),
            DepictionDescriptor_LOD_Low        ( MeshDescriptor =  Modele_Mortier_107mm_US_LOW ),
