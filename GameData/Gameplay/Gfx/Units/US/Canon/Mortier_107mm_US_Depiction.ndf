        DepictionDescriptor_LOD_High            (  MeshDescriptor = TemplateMeshDescriptor_Mortier_107mm_US( ModelFile = ModelFile_Servant_AT)  ),
        DepictionDescriptor_LOD_Mid             (  MeshDescriptor = TemplateMeshDescriptor_Mortier_107mm_US( ModelFile = ModelFile_Servant_AT_LOW)  ),
