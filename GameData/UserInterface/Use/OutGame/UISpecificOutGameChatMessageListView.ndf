    (
        ElementName = 'EditableTextHint'
        ComponentFrame = TUIFramePropertyRTTI
        (
        )

        ParagraphStyle = ~/paragraphStyleTextLeftAlign

        TextStyle = "Default"

        HorizontalFitStyle = ~/FitStyle/FitToContent
